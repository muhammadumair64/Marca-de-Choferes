<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainscreen.configuration.ConfigurationFragment">

        <LinearLayout
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/ic_configurationbackground"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_110sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_108sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:background="@null"
                android:id="@+id/animationView"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:lottie_rawRes="@raw/settings"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:background="@null"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_alignParentBottom="true"
                app:lottie_rawRes="@raw/settings"
                app:lottie_autoPlay="true"
                android:layout_marginStart="@dimen/_40sdp"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:background="@null"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_47sdp"
                app:lottie_rawRes="@raw/settings"
                app:lottie_autoPlay="true"
                android:layout_marginStart="@dimen/_66sdp"
                app:lottie_loop="true" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/push_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Notificaciones push"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/text_notification"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="No me lo perdería por el mundo. Pero si apareciera algo más, definitivamente no iría."
                android:textColor="@color/auth_hint_color"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@id/text_notification"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ic_separator" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:checked="true"
                android:padding="@dimen/_5sdp"
                android:thumb="@drawable/ic_thumb"
                android:track="@drawable/item_track"

                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/push_noti"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idioma"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/language"
                android:text=" (ENG)"
                android:textColor="@color/auth_hint_color"
                android:textSize="@dimen/_13sdp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/language_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward"

                />

        </RelativeLayout>




    </RelativeLayout>
</layout>