<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainscreen.configuration.ConfigurationFragment">

        <LinearLayout
            android:layout_margin="@dimen/_30sdp"
            android:id="@+id/upper_layout_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/black"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:background="@drawable/img_configbg"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@null"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/settingwithgray"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_40sdp"
                android:background="@null"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/settingwithgray"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_63sdp"
                android:layout_marginTop="@dimen/_47sdp"
                android:background="@null"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/settingwithgray" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/push_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/push_notification"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/text_notification"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/notification_discription"
                android:textColor="@color/auth_hint_color"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@id/text_notification"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_separator" />

            <ImageView
                android:id="@+id/togglebg"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@color/black"
                android:layout_marginRight="@dimen/_1sdp"
                />

            <ImageView
                android:id="@+id/toggleON"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/toggleoff" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/toggleOFF"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_23sdp"
                android:src="@drawable/toggleon"
                android:scaleType="fitXY"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/push_noti"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/languageNameInitails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/language"
                android:text=" (ESP)"
                android:textColor="@color/auth_hint_color"
                android:textSize="@dimen/_12sdp"

                />

            <ImageView
                android:id="@+id/arrowBack1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/black"
                />

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rightarrowimg"
                android:scaleType="fitXY"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/language_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@color/Privacy_policy_text_color"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/arrowBack2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/black"
                />

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rightarrowimg"
                android:scaleType="fitXY"
                />

        </RelativeLayout>



    </RelativeLayout>
</layout>