<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.marcadechoferes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission  android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <application
        android:name=".myApplication.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarcaDeChoferes">
        <activity
            android:name=".loadingScreen.LoadingScreen"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            ></activity>
        <activity
            android:name=".splashscreen.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".auth.createpassword.CreateNewPasswordScreen"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".auth.otp.OTP_Activity"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".auth.forgotPassword.ForgotPasswordActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".auth.signin.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mainscreen.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:alwaysRetainTaskState="true"
            ></activity>

        <service android:name=".mainscreen.home.timerServices.TimerService"
                  android:stopWithTask="false"
                  android:exported="true"
            />
        <service android:name=".mainscreen.home.timerServices.BreakTimerService"
                 android:stopWithTask="false"
                 android:exported="false"
                 android:enabled="true"
            />
        <service
            android:name=".mainscreen.home.timerServices.UploadRemaingDataService"
            android:exported="true" />

        <service
            android:name=".mainscreen.home.timerServices.WatcherService"
            android:stopWithTask="false"
             />

        <service android:name=".Extra.MyJobScheduler"
                 android:permission="android.permission.BIND_JOB_SERVICE"></service>

        <receiver android:name=".Extra.MyBroadastReceivers"  android:enabled="false" android:exported="true">
            <intent-filter >
                <action android:name="android.intent.action.TIME_TICK"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>